
<div class="flex-shrink-0 p-3 bg-white mt-8">
  <section class="page-section p-0 bg-light">
    <div class="mx-auto w-1/2">
      <div class="w-full max-w-2xl bg-gray-100 py-8 px-4 border border-gray-200 rounded shadow-sm" style="position: relative;">
      
      <%= render partial: "/shared/filter_form", locals: { section_name: "line_items"}%>

      <%= turbo_frame_tag "line_items" do %>
        <div class="table">
          <div class="table-header-group">
            <%= sort_link_to "Description", :name, class: "table-cell pr-4", data: { turbo_action: "advance" } %>
            <%= sort_link_to "Booked", :booked_amount, class: "table-cell pr-4 text-right", data: { turbo_action: "advance" } %>
            <%= sort_link_to "Actual", :actual_amount, class: "table-cell pr-4 text-right", data: { turbo_action: "advance" } %>
            <p class ="table-cell pr-4 text-right">Sub Total</p>
            <p class ="table-cell pr-4 text-right">Adjustments</p>
          </div>

          <%= render line_items %>
        </div>
          <%== pagy_bootstrap_nav @pagy %>
      <% end %>
        </div>
      </div>
    </section>
  </div>