	
  <div class="devise-container container h-100 header-space ">
    
		<div class="d-flex justify-content-center h-100">
			<div class="user_card bg-grey">
				<div class="d-flex justify-content-center">
					<div class="brand_logo_container">
						<%= image_tag(asset_path('no_logo.png'), class:"brand_logo", alt:"default logo") %>		
					</div>
				</div>
				<div class="d-flex justify-content-center form_container">
					<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>
						<div class="input-group mb-3">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fa fa-user"></i></span>
							</div>
               <%= f.email_field :email, autofocus: true,  class:"form-control input_user", placeholder: "email" %>
							 <%= inline_error_for(:email, resource) %>
						</div>
						<div class="input-group mb-2">
							<div class="input-group-append">
								<span class="input-group-text"><i class="fa fa-key"></i></span>
							</div>
              <%= f.password_field :password, autocomplete: "off", placeholder: "password", class:"form-control input_pass" %>
							<%= inline_error_for(:password, resource) %>
						</div>
						<div class="form-group">
						</div>
							<div class="d-flex justify-content-center w-100 login_container">
                <%= f.submit "Login",class: "btn  btn-primary w-100 my-2 " %>
            </div>
					<% end %>
				</div>
		
					<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
