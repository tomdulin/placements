<div class="input-group mb-3">
  <div class="input-group-append">
  	<span class="input-group-text"><i class="fa fa-envelope"></i></span>
  </div>
	<%= f.email_field :email, autofocus: true, required: true, class:"form-control input_user", placeholder: "email", required: 'required' %>
	<%= inline_error_for(:email, resource) %>
</div>

<div class="input-group mb-3">
  <div class="input-group-append">
  	<span class="input-group-text"><i class="fa fa-user"></i></span>
  </div>
	<%= f.text_field :name,  required: true, class:"form-control input_user", placeholder: "name",  required: 'required' %>
	<%= inline_error_for(:name, resource) %>
</div>

<div class="input-group mb-2">
  <div class="input-group-append">
  	<span class="input-group-text"><i class="fa fa-key"></i></span>
  </div>
  <% if password_required %>
    <%= f.password_field :password, required: true, autocomplete: "off", class:"form-control input_pass", placeholder: "password" %>
  <% else %>
    <%= f.password_field :password, autocomplete: "off", class:"form-control input_pass", placeholder: "password" %>
  <% end %>
  
  <%= inline_error_for(:password, resource) %>
</div>

<div class="input-group mb-2">
  <div class="input-group-append">
  	<span class="input-group-text"><i class="fa fa-key"></i></span>
  </div>
  <% if password_required %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control input_pass", placeholder: "confirm password",  required: 'required' %>
  <% else %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control input_pass", placeholder: "confirm password" %>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-3 login_container">
	<%= f.submit on_submit_text,class: "btn  btn-primary" %>
</div>